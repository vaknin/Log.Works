{
    "manifest_version": 2,
    "name": "Support.Works",
    "description": "Open segments, search inside sessions, open TFS and more",
    "version": "2.0",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Click on me to search the enter session!"
    },
    "commands": {
      "session": {
        "suggested_key": {
          "default": "Alt+L"
        },
        "description": "Open the selected session ID"
      },
      "segment": {
        "suggested_key": {
          "default": "Alt+S"
        },
        "description": "Open the selected segment"
      },
      "tfs": {
        "suggested_key": {
          "default": "Alt+T"
        },
        "description": "Open TFS"
      }
    },
    "icons":{
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "permissions": [
      "tabs", "contextMenus"
    ]
  }