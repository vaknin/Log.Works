{
    "manifest_version": 2,
    "name": "Log.Works",
    "description": "Search inside logs, easily.",
    "version": "1.00",
    "options_ui": {
      "page": "./options/options.html",
      "open_in_tab": false
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["./scripts/content.js"]
      }
    ],
    "background": {
      "scripts": ["./scripts/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "./images/icon.png",
      "default_popup": "./popup/popup.html",
      "default_title": "Find a keyword inside a session"
    },
    "icons":{
      "16": "./images/icon.png",
      "48": "./images/icon.png",
      "128": "./images/icon.png"
    },
    "permissions": [
      "tabs", "storage"
    ]
  }